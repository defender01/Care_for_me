<html lang="en">
  <head>
	  <!-- Required meta tags -->
	  <meta charset="utf-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	  
	  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
	<!-- stylesheet for navbar -->
	<link rel="stylesheet" href="/assets/cssFiles/navbar.css">

	<link rel="stylesheet" href="/assets/cssFiles/signin.css">

    <title>Registration-Care for me</title>
  </head>

  <body>		
	<!-- navigation bar -->
	<% include ./segments/navbar %>

	<main>
		<div class="box-container">
			<% include ./segments/messages %> 
			<form action="/auth/resetpassword" method="post" id="Login_Form">
				<div class="title">
					Please change your password before you continue!
				</div>
				<div class="input-container">
                    <input type="password" class="form-control" name="password" placeholder="password" required=""/>  
                    <input type="password" class="form-control" name="password2" placeholder="confirm password" required=""/>
				</div>
				
				<div class="btn-container">
					<button class="login-btn"  name="Submit" value="resetPass" type="Submit">Reset Password</button>
				</div>	
			</form>	

		</div>
	</main>
	<!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	<script>
		function forgotPass(){
			let role = $('#role1').is(':checked')? 'generalUser': 'doctor'
			let emailOrPhone = $('#emailOrPhone').val()
			if(emailOrPhone==''){
				alert('Please provide your email address')
			}
			else{
				let formData= $('#Login_form').serialize()
				
				$.ajax({
					type: "POST",
					url: '/auth/forgotpass',
					data: {
						role: role,
						emailOrPhone: emailOrPhone
					},
					success: (data)=>{
						alert(data)
					}
				});
			}		
		}
	</script>
  </body>
</html>

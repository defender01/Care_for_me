<fieldset>
  <div class="form-card">

    <div class="secondary-container title-bar">
      <div class="row">
        <div class="col-7">
          <h2 class="fs-title">Lifestyle</h2>
        </div>
        <div class="col-5">
          <h2 class="steps">Step 3 - 6</h2>
        </div>
      </div> 
    </div>
    

    <div class="secondary-container">
      <div class="subsection-card">
      
        <h4 class="subsection-title">Food Habit</h4>
        
        <label class="fieldlabels" for="meals_per_day">How many meals do you take everyday?</label>
        <input type="text" name="meals_per_day" id="meals_per_day" placeholder=""/>
  
        <label class="fieldlabels" for="meal_types">What your meals typically includes?</label>
        <input type="text" name="meal_types" id="meal_types" placeholder=""/>
  
      </div>
  
  
      <div class="subsection-card">
        
        <h4 class="subsection-title">Physical Exercise</h4>
        
        <label class="fieldlabels" for="exercise_types">What type of physical exercises you typically do?</label>
        <input type="text" name="exercise_types" id="exercise_types" placeholder=""/>
  
        <label class="fieldlabels" for="exercise_per_week">How many times you do physical exercise per week?</label>
        <input type="text" name="exercise_per_week" id="exercise_per_week" placeholder=""/>
  
      </div>
  
      <div class="subsection-card">
        
        <h4 class="subsection-title">Smoking History</h4>
        
        <label class="fieldlabels" for="sticks_per_day">How many sticks per day?</label>
        <input type="number" name="sticks_per_day" id="sticks_per_day" placeholder=""/>
  
      </div>
  
  
      <div class="subsection-card">
        
        <h4 class="subsection-title">Substance Use History</h4>
  
        <div class="subsection-row">
  
          <% if(typeof substanceNamesJson != 'undefined'){ %>
            <% for(let i = 0 ; i < substanceNamesJson.length; i++) {%>
              <div class="subsection-col" >
                
                <h6 onclick="togglePopUp('h6', '<%= substanceNamesJson[i].types %>' )" > <%= substanceNamesJson[i].name %> </h6>
                <button type="button" class="btn btn-outline-dark btn-sm" onclick="togglePopUp('Edit', '<%= substanceNamesJson[i].types %>' )">Edit</button>
              </div>
  
            <% } %>
          <% } %>
          
        </div>
  
      </div>
  
      <!-- For popup design-->
  
      <div class="modal-bg" id="popup" style="display: none">
        <div class="modal-container" >
          <button type="button" class="close" aria-label="Close"  onclick="togglePopUpForClose()">
            <span aria-hidden="true">&times;</span>
          </button>
  
          <!-- For collapse design-->
          <div id="accordion" class="collapse-container">
  
  
          </div>
  
          <div class="popUpRowElementHolder">
            <button type="button" class="btn btn-outline-success okButton" id="popUpOKButton" onclick="togglePopUpForOK()">Ok</button>
            <button type="button" class="btn btn-outline-danger cancelButton" id="popUpCancelButton" onclick="togglePopUpForClose()">Cancel</button>
          </div>
  
        </div>
      </div>
  
      <!-- Here popup design has finished-->
  
      <div id="substance_details" class="subsection-card" style="display: none">
        
        <br>
        <h4 class="subsection-title"> All Substance details from popup window</h4>
        
    
        <% if(typeof substanceNamesJson != 'undefined'){ %>
          <% for(let i = 0 ; i < substanceNamesJson.length; i++) {
                
                var result = substanceNamesJson[i].types
  
                for(let j = 0 ; j < result.length; j++){ 
                    var substanceName = result[j].trim()
          %>
            
            <script>
    
                var substanceName = '<%= substanceName %>'
                var htmlForSubstanceDetails = '<div class="card">' + 
                                                '<h6> ' + substanceName + ' </h6>' +
                                                '<label class="fieldlabels" for="first_use_'+ camelCase(substanceName) + '">Age when you first used this:</label> ' +
                                                '<input type="text" name="first_use_'+ camelCase(substanceName) + '" id="first_use_'+camelCase(substanceName) + '" placeholder="" />' + 
                                      
                                                '<label class="fieldlabels" for="how_much_use_'+camelCase(substanceName) + '">How much & how often did you use this?</label>' +
                                                '<input type="text" name="how_much_use_'+camelCase(substanceName) + '" id="how_much_use_'+camelCase(substanceName) + '" placeholder="" />' +
                                        
                                                '<label class="fieldlabels" for="how_many_year_'+camelCase(substanceName) + '">How many years did you use this?</label>' +
                                                '<input type="text" name="how_many_year_'+camelCase(substanceName) + '" id="how_many_year_'+camelCase(substanceName) + '" placeholder="" />' +
                                                
                                                '<label class="fieldlabels" for="last_use_'+camelCase(substanceName) + '">When did you last use this?</label>' +
                                                '<input type="text" name="last_use_'+camelCase(substanceName) + '" id="last_use_'+camelCase(substanceName) + '" placeholder="" />' +
                                        
                                                '<label class="fieldlabels" for="currently_use_'+camelCase(substanceName) + '">Do you currently use this?</label>' +
                                                '<input type="text" name="currently_use_'+camelCase(substanceName) + '" id="currently_use_'+camelCase(substanceName) + '" placeholder="" />' +
                                                
                                              '</div>';
    
                var newDiv = document.createElement('div');
                document.getElementById('substance_details').appendChild(newDiv);
                newDiv.outerHTML = htmlForSubstanceDetails;    
    
            </script>
    
            <% } %>
          <% } %>
        <% } %>
    
    
      </div>
    </div>
        

    
  </div> 
  <input type="button" name="next" class="next action-button" value="Next" /> 
  <input type="button" name="previous" class="previous action-button-previous" value="Previous" />
</fieldset>

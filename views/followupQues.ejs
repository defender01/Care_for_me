<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <!-- fontawesome cdn -->
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">

    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
    crossorigin="anonymous"></script>

    <!-- stylesheet for navbar -->
    <link rel="stylesheet" href="/assets/cssFiles/navbar.css">
    <link rel="stylesheet" href="/assets/cssFiles/followupQues.css" />
    <!-- for loader -->
    <script src="/assets/jsFiles/loader.js"></script>    
    <link rel="stylesheet" href="/assets/cssFiles/loader.css" />


    <title>Registration-Care for me</title>
  </head>

  <body onload="displayParam(0)">
    <!-- display loading icon -->
    <div class="se-pre-con"></div>
    <!-- ends -->

    <!-- navigation bar -->
    <% include ./segments/navbar %>
    
    <main>
      <div class="side-bar">
        <div class="topic-container">
          <div class="topic">
            <h3>Sections</h3>
          </div>
          <div class="angle">
            <i class="fas fa-angle-right"  id="rightAngle" style="display: none;" onclick="displaySidebar()"></i>
            <i class="fas fa-angle-left" id="leftAngle"  onclick="hideSidebar()"></i>
          </div>
        </div>
        <!-- here are all sidebar items -->
        <div class="nav-sec-cont">
          <% for(let i=0; i<parameters.length; i++) {%>
          <div class="sec-cont">
            <div class="sec-name-and-cnt" onclick="displayParam(<%=i%>)">
              <div class="sec-name">
                <a ><%= parameters[i].name%></a>
              </div>
              <div class="sec-items-cnt">
                <%=parameters[i].questions.length%>
              </div>
            </div>
          </div>
          <% } %>   

        </div>
      </div>
      <div id='addParamHere'></div>

      <form method="POST" action="/doctor/followupQues/continue" id="quesForm">
      </form>
     
    </main>
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script>
      var stDate = new Date();
      var enDate = new Date(stDate.getFullYear()+5, stDate.getMonth(), stDate.getDate())
      // adding 1 to getMonth() because in this function month is 0 indexed Jan=0th month
      // but while taking input month is 1 indexed, Jan = 1th month 
      var stDateStr = stDate.getFullYear()+'-'+ ( stDate.getMonth()<10? '0'+stDate.getMonth()+1 : stDate.getMonth()+1 )+'-'+ ( stDate.getDate()<10? '0'+stDate.getDate() : stDate.getDate() )
      var enDateStr = enDate.getFullYear()+'-'+ ( enDate.getMonth()<10? '0'+enDate.getMonth()+1 : enDate.getMonth()+1 )+'-'+ ( enDate.getDate()<10? '0'+enDate.getDate() : enDate.getDate() )

      '2020-1-10'
      let parameters = <%- JSON.stringify(parameters) %> 
      let isCreated = [];
      let currentCnt=0, totalCnt =0;

      parameters.forEach(element => {
        isCreated.push(false)
      });

   

      function displaySidebar(){
        $('#rightAngle').css('display','none')
        $('#leftAngle').css('display','block')
        $('.side-bar').css('left', '0')
      }
      function hideSidebar(){
        $('#leftAngle').css('display','none')
        $('#rightAngle').css('display','block')
        $('.side-bar').css('left', '-250px')
      }
      
      window.onresize = function() {
          if (window.innerWidth >= 1000) {
            $('.side-bar').css('left', '0')
          }
      }

      function save(){
        let items = $('input[type="checkbox"]')
        let ques =[]
        for(let i=0; i<items.length; i++){
          if(items[i].checked){
            ques.push(items[i].name)
          }
        }
        console.log(ques)
      }

      function displayParam(ind){
        let parameter = parameters[ind]
        for(let i=0;i<parameters.length;i++){
          if(i!=ind && isCreated[i]) $('#paramDetails'+parameters[i]._id).css('display','none')
        }
        if(!isCreated[ind]){
          isCreated[ind] = true
          let allQues = ''
          for(let i=0; i<parameter.questions.length; i++) {
            allQues+=`<tr>
                        <th scope="row"> <input type="checkbox" name="selectQues" value="${parameter.questions[i]._id}"> </th>
                        <td>
                          ${parameter.questions[i].name}
                          <input type="text" id="question${parameter.questions[i]._id}" value="${parameter.questions[i].name}"  style="display: none;">
                        </td>                
                        <td> 
                          <input class="form-control" type="date" id="startDate${parameter.questions[i]._id}" min="${stDateStr}" max="${enDateStr}" value="${stDateStr}" onchange="setEndDate('${parameter.questions[i]._id}')" >
                        </td> 
                        <td>
                          <input class="form-control" type="date" id="endDate${parameter.questions[i]._id}" min="${stDateStr}" max="${enDateStr}" value="${stDateStr}">                          
                        </td>
                        <td> 
                          <select class="form-control" name="frequency" id="frequency${parameter.questions[i]._id}" >
                            <option selected value='1d'> 1 day </option>
                            <% for(let j = 1 ; j < 24; j++) {%>
                              <option value="<%=j%>h"><%= j %> hour</option>                    
                            <% } %>
                            <% for(let j = 1 ; j < 10; j++) {%>
                              <option value="<%=j%>d"><%= j %> day</option>                    
                            <% } %>                    
                          </select>
                        </td>
                        ${parameter.questions[i].inputType=='numberType'?
                          `<td> <input class="form-control" type="number" id="maxVal${parameter.questions[i]._id}"> </td>`+
                          `<td> <input class="form-control" type="number" id="minVal${parameter.questions[i]._id}"> </td>`
                          :
                          `<td> </td>`+
                          `<td> </td>`
                        }                        
                      </tr>            `
          } 
          $('#addParamHere').replaceWith(`
            <div id='addParamHere'></div>
            <div class="wrapper" id="paramDetails${parameter._id}">
              <div class="notify-bar">
                <div class="selected-current" id="current${parameter._id}">
                  Selected from current: ${currentCnt}
                </div>
                <div class="total-selected" id="total${parameter._id}">
                  Total Selected Questions: ${totalCnt}
                </div>
                <div class="continue">
                  <button onclick="continueAndSave()">
                    Continue
                  </button>
                </div>
              </div>
              
              <div class="ques-holder" id="quesHolder${parameter._id}">
                <table class="table table-striped table-bordered">
                  <thead >
                    <tr>
                      <th scope="col">Select</th>
                      <th scope="col">Question</th>
                      <th scope="col">Start Date</th>
                      <th scope="col">End Date</th>
                      <th scope="col">Frequency</th>
                      <th scope="col">Max value</th>
                      <th scope="col">Min value</th>
                    </tr>
                  </thead>
                  <tbody>
                  
                  ${allQues}

                  </tbody>
                </table>          
              </div>
            </div>
          `)
        }
        else{
          $('#paramDetails'+parameters[ind]._id).css('display','block')
        }
      }

      function continueAndSave(){
        let selectedQId =[], selectedQDetails = [], selectedQDuration = [], selectedQFreq = [], selectedQMxVal = [], selectedQMnVal = []
        let questions = []
        let allQues = ''
        $('input[name="selectQues"]:checked').each(function() {
          let qId = this.value
          let question= {
            id : qId,
            name : $('#question'+qId).val(),
            startDate : $('#startDate'+qId).val(),
            endDate : $('#endDate'+qId).val(),
            frequency : $('#frequency'+qId).val(),
            maxVal : $('#maxVal'+qId).val(),
            minVal : $('#minVal'+qId).val(),
          }
          console.log(question)

          allQues+=`    <input type="text" name="questionId" value="${question.id}"  style="display: none;">
                        <input type="text" name="name${question.id}" value="${question.name}"  style="display: none;">
                        <input type="date" name="startDate${question.id}" value="${question.startDate}" style="display: none;">
                        <input type="date" name="endDate${question.id}" value="${question.endDate}" style="display: none;">                          
                        <input type="text" name="frequency${question.id}" value="${question.frequency}" style="display: none;">
                        <input type="number" name="maxVal${question.id}" value="${question.maxVal}" style="display: none;">
                        <input type="number" name="minVal${question.id}" value="${question.minVal}" style="display: none;">
                        `  
        })

        $('#quesForm').replaceWith(
          `
          <form method="POST" action="/doctor/followupQues/continue" id="quesForm">
            ${allQues}
          </form>
          `
        )

        $('#quesForm').submit()
        
      }

      function setEndDate(qId){
        // this function sets the endDate min according to the selected startDate
        // because any date in endDate before startDate is invalid
        let startDate = $('#startDate'+qId).val()
        $('#endDate'+qId).attr('min', startDate)
        $('#endDate'+qId).attr('value', startDate)
      }
    </script>
  </body>
</html>

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>

    <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css'>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js'></script>

    <!-- stylesheet for navbar -->
    <link rel="stylesheet" href="/assets/cssFiles/navbar.css">

    <!-- stylesheet and script for MUltiple step form -->
    <link rel="stylesheet" href="/assets/cssFiles/profile.css">
    <script src='/assets/jsFiles/profile.js'></script>

    <!-- for loader -->
    <script src="/assets/jsFiles/loader.js"></script>    
    <link rel="stylesheet" href="/assets/cssFiles/loader.css" />
  

    <title>Profile</title>

</head>

<body onload="onStart()">
    <!-- display loading icon -->
    <div class="se-pre-con"></div>
    <!-- ends -->

    <!-- navigation bar -->
    <% include ./segments/navbar %>

    <main>
        <div class="profile-container">

            <div class="nav flex-column sidebar-container " id="sidebar-tab" role="tablist" aria-orientation="vertical">
    
                <a class="nav-link active hrline" id="about-tab" data-toggle="tab" href="#about" role="tab" onclick="changeAppearance(this.id)" aria-controls="about"
                    aria-selected="true">About</a>
    
                <a class="nav-link hrline" id="work-and-education-tab" data-toggle="tab" href="#work-and-education" role="tab"onclick="changeAppearance(this.id)"
                    aria-controls="work-and-education" aria-selected="false">Work and Education</a>
    
                <a class="nav-link hrline" id="birth-and-development-tab" data-toggle="tab" href="#birth-and-development" onclick="changeAppearance(this.id)"
                    role="tab" aria-controls="birth-and-development" aria-selected="false">Birth and Development History</a>
    
                <a class="nav-link hrline" id="family-info-tab" data-toggle="tab" href="#family-info" role="tab" onclick="changeAppearance(this.id)"
                    aria-controls="family-info" aria-selected="false">Family Information</a>
    
                <a class="nav-link hrline" id="lifestyle-tab" data-toggle="tab" href="#lifestyle" role="tab" onclick="changeAppearance(this.id)"
                    aria-controls="lifestyle" aria-selected="false">Lifestyle</a>
    
                <a class="nav-link" id="prev-diseases-tab" data-toggle="tab" href="#prev-diseases" role="tab" onclick="changeAppearance(this.id)"
                    aria-controls="prev-diseases" aria-selected="false"> Previous Diseases and Disorders</a>
    
            </div>
    
            <div class="tab-content data-container" id="sidebar-tabContent">
    
                <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="about-tab">
                    <% include ./profileSegments/about %>
                </div>
    
                <div class="tab-pane fade" id="work-and-education" role="tabpanel" aria-labelledby="work-and-education-tab">
                    <% include ./profileSegments/workAndEducation %>
                </div>
                <div class="tab-pane fade" id="birth-and-development" role="tabpanel"
                    aria-labelledby="birth-and-development-tab">
                    <% include ./profileSegments/birthAndDevelopmentHistory %>
                </div>
                <div class="tab-pane fade" id="family-info" role="tabpanel" aria-labelledby="family-info-tab">
                    <% include ./profileSegments/familyInfo %>
                </div>
    
                <div class="tab-pane fade" id="lifestyle" role="tabpanel" aria-labelledby="lifestyle-tab">
                    <% include ./profileSegments/about %>
                </div>
    
                <div class="tab-pane fade" id="prev-diseases" role="tabpanel" aria-labelledby="prev-diseases-tab">
                    <% include ./profileSegments/about %>
                </div>
            </div>
    
            <div class=" empty-side " aria-orientation="vertical">
                <!-- this section is created to look the page good by keeping 2 flex right empty. We can use this later -->
            </div>
    
        </div>
    
    </main>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
</body>

</html>